<div class="container py-5">
    <div class="row justify-content-center">
        @foreach (var item in Model.Products)
        {
            <div class="col-md-4">
                <div class="card product-card border-0 rounded-4 shadow-sm my-3">
                    <div class="position-relative">
                        <span class="badge bg-primary badge-custom">@item.Category.Name</span>
                        <div class="overflow-hidden">
                            <img src="~/images/product_images/@item.MainImg" class="card-img-top product-image" alt="Product Image">
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <h5 class="card-title mb-3 fw-bold">@item.Name</h5>
                        <p class="card-text text-muted mb-4">
                            Experience crystal clear sound with our latest noise-cancelling
                            technology and premium build quality.
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="price">@item.Price.ToString("c")</span>
                            <button class="btn btn-custom text-white px-4 py-2 rounded-pill">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-12 justify-content-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination" style="
                    display: flex;
                    justify-content: center;>
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.CurrentPage-1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    @for(var i = 1; i <= @Model.TotalPages; i++)
                    {
                        <li class="page-item"><a class="page-link" href="?page=@i">@i</a></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.CurrentPage + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

