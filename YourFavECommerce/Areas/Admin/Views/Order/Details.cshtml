@model Order

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-12">
            <h2 class="display-6">Details Order @Model.Id - @Model.ApplicationUser.Name</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form>
                <div class="mb-3">
                    <label for="userName" class="form-label">User Name</label>
                    <input class="form-control" disabled value="@Model.ApplicationUser.Name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Order Status</label>
                    @if (Model.OrderStatus == OrderStatus.Pending)
                    {
                        <td><span class="badge text-bg-warning">@Model.OrderStatus</span></td>
                    }
                    else if (Model.OrderStatus == OrderStatus.InProcessing)
                    {
                        <td><span class="badge text-bg-info">@Model.OrderStatus</span></td>
                    }
                    else if (Model.OrderStatus == OrderStatus.Shipped)
                    {
                        <td><span class="badge text-bg-secondary">@Model.OrderStatus</span></td>
                    }
                    else if (Model.OrderStatus == OrderStatus.Canceled)
                    {
                        <td><span class="badge text-bg-danger">@Model.OrderStatus</span></td>
                    }
                    else if (Model.OrderStatus == OrderStatus.Completed)
                    {
                        <td><span class="badge text-bg-success">@Model.OrderStatus</span></td>
                    }
                </div>
                <div class="mb-3">
                    <label for="TotalPrice" class="form-label">Total Price</label>
                    <input type="number" class="form-control" disabled value="@Model.TotalPrice">
                </div>
                <div class="mb-3">
                    <label class="form-label">Transaction Status</label>
                    @if (Model.TransactionStatus == TransactionStatus.Pending)
                    {
                        <td><span class="badge text-bg-warning">@Model.TransactionStatus</span></td>
                    }
                    else if (Model.TransactionStatus == TransactionStatus.Completed)
                    {
                        <td><span class="badge text-bg-success">@Model.TransactionStatus</span></td>
                    }
                    else if (Model.TransactionStatus == TransactionStatus.Canceled)
                    {
                        <td><span class="badge text-bg-danger">@Model.TransactionStatus</span></td>
                    }
                </div>
                <div class="mb-3">
                    <label for="sessionId" class="form-label">session Id</label>
                    <input type="text" class="form-control" disabled value="@Model.SessionId">
                </div>
                <div class="mb-3">
                    <label for="transactionId" class="form-label">transaction Id</label>
                    <input type="text" class="form-control" disabled value="@Model.TransactionId">
                </div>
                <div class="mb-3">
                    <label class="form-label">Transaction Type</label>
                    <td><span class="badge text-bg-info">@Model.TransactionType</span></td>
                </div>
                @if (Model.TrackingNumber is not null)
                {
                    <div class="mb-3">
                        <label class="form-label">Carrier Id</label>
                        <input type="text" class="form-control" disabled value="@Model.TrackingNumber">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Carrier Name</label>
                        <input type="text" class="form-control" disabled value="@Model.CarrierName">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Shipped Date</label>
                        <input type="datetime" class="form-control" disabled value="@Model.ShippedDate">
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <label class="form-label">Shipped? </label>
                        <td><span class="badge text-bg-danger">Not Shipped!!</span></td>
                    </div>
                }
            </form>
        </div>
    </div>
</div>